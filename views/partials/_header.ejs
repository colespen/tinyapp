<!--this code is rendered on multiple pages-->
<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <a class="nav-item nav-link" href="/register">Sign Up</a>

        <form class="form-inline" action="/login" method="POST">
          <div style="position: absolute; right: 16px; padding-top: 2px">
            <% if (user.email) { %>
              <h7>
                <%= `Logged in as ${user.email}!` %></h7>
                  <button 
                    formaction="/logout" 
                    class="btn btn-primary btn-sm" style="margin-left: 14px; margin-bottom: 3px; padding-left: 8px">logout</button>
                  <% } else { %>
                      <input 
                      class="form-control-sm" 
                      type="text" 
                      name="username" 
                      placeholder="username" 
                      style="width: 170px" 
                      />
                      <button 
                        class="btn btn-primary btn-sm" style="margin-left: 8px; margin-bottom: 3px; padding-left: 8px">login</button>
                      <% } %>
          </div>
        </form>
      </div>
    </div>
  </nav>
</header>